{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pivo-test-workspace/elements/form/home": [
        "libs/elements/form/home/src/index.ts"
      ],
      "@pivo-test-workspace/elements/landingpage/home": [
        "libs/elements/landingpage/home/src/index.ts"
      ],
      "@pivo-test-workspace/features/auth": ["libs/features/auth/src/index.ts"],
      "@pivo-test-workspace/models": ["libs/models/src/index.ts"],
      "@pivo-test-workspace/state": ["libs/state/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
